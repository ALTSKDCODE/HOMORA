<% layout("/layouts/boilerplate") %>
<main class="main-content container">
    <style>
      .profile-header {
        background: linear-gradient(135deg, #fe424d, #ff737b);
        color: white;
        padding: 60px 0;
        border-radius: 20px;
        margin-bottom: 5rem;
      }
      .profile-card {
        background: #fff;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-top: -40px;
      }
      .profile-avatar {
        width: 120px;
        height: 120px;
        background: #ffe5e7;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 55px;
        font-weight: bold;
        color: #fe424d;
        margin: auto;
      }
    </style>

    <div class="container">
      <!-- PROFILE HEADER -->
      <div class="profile-header text-center">
        <h1 class="fw-bold">Your Profile</h1>
      </div>

      <!-- PROFILE CARD -->
      <div class="col-lg-6 mx-auto">
        <div class="profile-card text-center">
          <!-- Avatar -->
          <div class="profile-avatar mb-3">
            <%= user.username[0].toUpperCase() %>
          </div>

          <h2 class="fw-bold mb-2"><%= user.username %></h2>
          <p class="text-muted"><%= user.email %></p>

          <hr class="my-4" />

          <a href="/listings/new" class="btn btn-danger w-100 py-2 mb-3">
            Host Your Place
          </a>

          <a href="/listings" class="btn btn-outline-dark w-100 py-2">
            View All Listings
          </a>
        </div>
      </div>
    </div>
</main>
