<% layout("/layouts/boilerplate") %>

<main class="main-content container">
  <div
    class="edit-container mx-auto mt-4 mb-5 shadow-sm p-4 rounded-4 bg-white"
  >
    <h3 class="fw-semibold mb-4 text-center">Create a New Listing</h3>

    <form
      action="/listings"
      method="POST"
      novalidate
      class="needs-validation listing-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          placeholder="Add a catchy title"
          class="form-control form-control-lg rounded-3"
          required
        />
        <div class="invalid-feedback">Enter a valid title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label fw-semibold"
          >Description</label
        >
        <textarea
          name="listing[description]"
          id="description"
          class="form-control rounded-3"
          rows="4"
          placeholder="Write a short description"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label fw-semibold"
          >Upload Listing Image</label
        >
        <input
          type="file"
          name="listing[image]"
          id="image"
          class="form-control form-control-lg rounded-3"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label fw-semibold">Price</label>
          <input
            type="number"
            name="listing[price]"
            id="price"
            placeholder="e.g. 2500"
            class="form-control form-control-lg rounded-3"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label fw-semibold">Country</label>
          <input
            type="text"
            name="listing[country]"
            id="country"
            placeholder="India"
            class="form-control form-control-lg rounded-3"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label fw-semibold">Location</label>
        <input
          type="text"
          name="listing[location]"
          id="location"
          placeholder="Bengaluru, Karnataka"
          class="form-control form-control-lg rounded-3"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="/listings" class="btn btn-outline-secondary rounded-3 px-4">
          Cancel
        </a>
        <button type="submit" class="btn btn-danger rounded-3 px-4 fw-semibold">
          Add Listing
        </button>
      </div>
    </form>
  </div>
</main>
