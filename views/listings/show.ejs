<% layout("/layouts/boilerplate") %>

<!-- Pass map data to JS -->
<script>
  const mapToken = '<%= process.env.MAPBOX_TOKEN %>';
  const coordinates = <%= listing.geometry && listing.geometry.coordinates
  ? JSON.stringify(listing.geometry.coordinates)
  : "[73.8567, 15.2993]" %>;
  const listingTitle = "<%= listing.title %>";
  const listingLocation = "<%= listing.location %>, <%= listing.country %>";
</script>

<main class="main-content container">
  <!-- Listing Header Image -->
  <div class="show-header mb-4">
    <img
      src="<%= listing.image.url %>"
      alt="listing_image"
      class="show-img w-100 rounded-4 shadow-sm"
    />
  </div>

  <!-- Listing Details Card -->
  <div class="show-details mx-auto mb-5 p-4 bg-white rounded-4 shadow-sm">
    <h2 class="fw-semibold mb-3 text-center"><%= listing.title %></h2>

    <p class="text-muted mb-3 text-center">
      <%= listing.location %>, <%= listing.country %>
    </p>

    <p class="text-muted text-center mb-2">
      Hosted by <strong><%= listing.owner.username %></strong>
    </p>

    <p class="fs-5 text-dark text-center mb-4">
      â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
    </p>

    <p class="text-secondary mb-4"><%= listing.description %></p>

    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="action-buttons justify-content-center">
      <a href="/listings/<%= listing._id %>/edit" class="edit-btn">Edit</a>

      <form
        action="/listings/<%= listing._id %>?_method=DELETE"
        method="POST"
        onsubmit="return confirm('Are you sure you want to delete this listing?');"
      >
        <button type="submit" class="delete-btn">Delete</button>
      </form>
    </div>
    <% } %>
  </div>

  <!-- Review Section -->
  <% if(currentUser) { %>
  <div class="show-reviews mx-auto mb-5 p-4 bg-white rounded-4 shadow-sm">
    <h4 class="fw-semibold mb-4 text-center">Leave a Review</h4>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation listing-form"
    >
      <!-- Star Rating -->
      <fieldset class="starability-slot mb-3">
        <legend class="fw-semibold mb-2">Rating</legend>

        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="rate1" name="review[rating]" value="1" />
        <label for="rate1" title="Terrible">1 star</label>

        <input type="radio" id="rate2" name="review[rating]" value="2" />
        <label for="rate2" title="Not good">2 stars</label>

        <input type="radio" id="rate3" name="review[rating]" value="3" />
        <label for="rate3" title="Average">3 stars</label>

        <input type="radio" id="rate4" name="review[rating]" value="4" />
        <label for="rate4" title="Very good">4 stars</label>

        <input type="radio" id="rate5" name="review[rating]" value="5" />
        <label for="rate5" title="Amazing">5 stars</label>
      </fieldset>

      <div class="mb-3">
        <label for="comment" class="form-label fw-semibold">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="4"
          class="form-control rounded-3"
          placeholder="Share your experience..."
          required
        ></textarea>
        <div class="invalid-feedback">Please add a comment for your review</div>
      </div>

      <div class="text-end">
        <button class="btn btn-danger px-4 rounded-3 fw-semibold">
          Submit
        </button>
      </div>
    </form>
  </div>
  <% } %>

  <!-- All Reviews -->
  <div class="show-all-reviews mx-auto mb-5">
    <h4 class="fw-semibold mb-4 text-center">All Reviews</h4>

    <div class="row justify-content-center">
      <% if (listing.reviews && listing.reviews.length > 0) { %> <%
      listing.reviews.forEach((review) => { %>
      <div class="col-md-5 col-sm-10 mb-4">
        <div class="card border-0 shadow-sm rounded-4 review-card">
          <div class="card-body">
            <h6 class="fw-semibold mb-1">@<%= review.author.username %></h6>
            <p class="text-muted mb-1"><%= review.comment %></p>

            <div
              class="starability-result mb-2"
              data-rating="<%= review.rating %>"
            ></div>

            <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
            <form
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              method="POST"
              onsubmit="return confirm('Delete this review?');"
            >
              <button type="submit" class="btn btn-outline-danger btn-sm mt-2">
                Delete
              </button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <p class="text-center text-muted">
        No reviews yet. Be the first to review!
      </p>
      <% } %>
    </div>
  </div>

  <div class="map-wrapper mb-4">
    <div id="map"></div>
  </div>

  <script src="/js/map.js"></script>
</main>
