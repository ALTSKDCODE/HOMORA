<% layout("/layouts/boilerplate") %>
<main class="main-content container">
    <style>
      .about-hero {
        background: linear-gradient(135deg, #fe424d, #ff737b);
        color: white;
        padding: 80px 0;
        border-radius: 20px;
      }
      .about-section {
        padding: 40px 0;
      }
      .about-card {
        border-radius: 20px;
        padding: 30px;
        background: #fff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      }
    </style>

    <div class="container">
      <!-- Hero Banner -->
      <div class="about-hero text-center mb-5">
        <h1 class="fw-bold display-5">About Homora</h1>
        <p class="lead mt-3">
          A modern platform to find unique stays, host your place & explore the
          world.
        </p>
      </div>

      <!-- About Content -->
      <div class="about-section">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="about-card">
              <h2 class="fw-bold">Our Story</h2>
              <p class="mt-3">
                Homora is inspired by Airbnb, built with love using Node.js,
                Express, MongoDB and EJS. It focuses on creating a seamless
                experience for both guests and hosts.
              </p>

              <h3 class="fw-bold mt-4">Our Mission</h3>
              <p>
                To make travel simple, beautiful, and accessible â€” by connecting
                people with unique homes across the country.
              </p>

              <h3 class="fw-bold mt-4">Technologies Used</h3>
              <ul>
                <li>Node.js & Express.js</li>
                <li>MongoDB with Mongoose</li>
                <li>EJS Templating</li>
                <li>Mapbox for maps</li>
                <li>Cloudinary + Multer for images</li>
              </ul>

              <h3 class="fw-bold mt-4">What You Can Do</h3>
              <ul>
                <li>Explore listings across the country</li>
                <li>Host your place & earn</li>
                <li>Add reviews on stays</li>
                <li>View places on interactive maps</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
</main>
